<div class="photos">
  <div class="row">
    <% @photos.each do |photo| %>
      <div class="photo-content">
        
        <div class="photo-info">
          <div class="user-avatar">
            <img src="<%= current_user.avatar_url || url_to_image('ellipse-1.png') %>"/>
            <span class="time-ago"><%= photo.time_ago %></span>
          </div>

        </div>
        
        <div class="image-content">
          <a href="<%= photo_path(photo) %>">
            <img src="<%= photo.image.url %>">
          </a>
        </div>

        <div class="photo-footer">
          <div class="row">
            <div class="col-md-9">
              <h4><%= photo.title %></h4>
            </div>

            <span id="photo-info" data-photo-id="<%= photo.id %>"></span>
    
            <div class="col-md-2">
              <select class="center-block" id="photo-rating-<%= photo.id %>" data-current-rating="<%= photo.average_rating %>">
                <option value="1"><%= photo.id %></option>
                <option value="2"><%= photo.id %></option>
                <option value="3"><%= photo.id %></option>
                <option value="4"><%= photo.id %></option>
                <option value="5"><%= photo.id %></option>
              </select> 
            </div>
    
          </div>
          </div>

      </div>
    <% end %>
  </div>
</div>